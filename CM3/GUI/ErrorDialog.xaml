<Window x:Class="ConceptMatrix.GUI.ErrorDialog"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:ConceptMatrix.GUI"
		mc:Ignorable="d"
		Title="Error" 
		Height="160" 
		Width="450" 
		WindowStartupLocation="CenterOwner"
		WindowStyle="ToolWindow">
	
	<Grid Margin="3" x:Name="ContentArea">
		<Grid.RowDefinitions>
			<RowDefinition Height="48"/>
			<RowDefinition/>
			<RowDefinition Height="32"/>
		</Grid.RowDefinitions>

		<Label Grid.Row="0" Content="{Binding TitleText, FallbackValue='Some Error Message'}"/>

		<Expander x:Name="DetailsExpander" Grid.Row="1" Header="Details" Expanded="OnExpanded" Collapsed="OnCollapsed">
			<ScrollViewer Grid.Row="1">
				<TextBlock Text="{Binding MessageText}" TextWrapping="Wrap"/>
			</ScrollViewer>
		</Expander>
		
		<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Content="Quit" Width="75" Click="OnOkClick"/>
		</StackPanel>
		
	</Grid>
</Window>
