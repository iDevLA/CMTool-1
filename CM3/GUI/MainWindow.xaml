<Window x:Class="ConceptMatrix.GUI.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:GUI" xmlns:views="clr-namespace:ConceptMatrix.GUI.Views"
		mc:Ignorable="d"
		Title="MainWindow" Height="450" Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="150"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>

		<Label 
			x:Name="LogDisplay"
			Grid.Row="1" 
			Grid.ColumnSpan="2"/>

		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition/>
			</Grid.RowDefinitions>
			
			<views:TargetView/>
			
			<ListBox Grid.Row="1" x:Name="ViewList" SelectionChanged="OnSelectionChanged"/>
		</Grid>
		

		<ScrollViewer Grid.Row="0" Grid.Column="1" x:Name="ViewArea"/>

	</Grid>
</Window>
